<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MainLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/zero_dimension</item>
        <item name="android:layout_weight">@integer/auto_dimension_weight</item>
        <item name="android:background">@color/containerBackgroundColor</item>

    </style>

    <style name="ContainerCell" parent="android:Widget.TextView">
        <item name="android:text">@string/data_cell_text</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/dataCellBackgroundColor</item>
    </style>

    <style name="ButtonLinearLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="ImageButton">
        <item name="android:layout_width">@dimen/zero_dimension</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">@integer/auto_dimension_weight</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">@dimen/zero_dimension</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@integer/auto_dimension_weight</item>
    </style>

</resources>
